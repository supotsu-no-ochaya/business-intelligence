server {
    listen 80;
    server_name localhost;


    location / {
        root /usr/share/nginx/html;
        index index.html;
        try_files $uri /index.html;
    }

    
    #location /static/ {
        #root /usr/share/nginx/html;
        #index index.html;
        #expires max;
        #access_log off;
        #add_header Cache-Control "public";
    #}
    

    # Serve Django admin static files
    location /django-static/ {
        alias /app/staticfiles/;
        expires max;
        #access_log off;
        #add_header Cache-Control "public";
        autoindex on; 

        # Add headers
        add_header Content-Security-Policy "default-src 'self'";
        add_header X-Content-Type-Options nosniff;
        add_header X-Frame-Options DENY;
        add_header X-XSS-Protection "1; mode=block";

        # Handle static files
        try_files $uri $uri/ =404;
    }

    location /django-static/admin/css/ {
        alias /app/staticfiles/admin/css/;
        expires max;
        #access_log off;
        #add_header Cache-Control "public";
        autoindex on; 

        # Add headers
        add_header Content-Security-Policy "default-src 'self'";
        add_header X-Content-Type-Options nosniff;
        add_header X-Frame-Options DENY;
        add_header X-XSS-Protection "1; mode=block";

        # Handle static files
        try_files $uri $uri/ =404;
    }

    # Optional: Serve media files (e.g., uploaded user files)
    location /media/ {
        root /app;  # Adjust if necessary to your media location
    }

    # Proxy requests to the backend (Django) via Gunicorn
    location /api/ {
        proxy_pass http://backend:8000;  # Backend service URL
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

}

